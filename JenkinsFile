    agent any

    environment {

        MONGO_URI_PRODUCTION = 'mongodb+srv://binaminhhassan14:xShANg8cs607Fq0M@cluster101.dao1p.mongodb.net/?retryWrites=true&w=majority&appName=Cluster101'
       
    }

    stages {
        stage('Checkout') {
            checkout scm
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying Application'
                    sh 'curl -X POST https://api.render.com/deploys/rnd_9KZG6DR1UmXSLp8Bx6uciCKsOTuu'
                }
            }
    }

   post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
        always {
            cleanWs() 
        }
}

