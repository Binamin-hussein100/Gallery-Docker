pipeline {
    agent any

    environment {

        MONGO_URI_PRODUCTION = 'mongodb+srv://binaminhhassan14:xShANg8cs607Fq0M@gallery.wc344.mongodb.net/darkroom?retryWrites=true&w=majority'
        MONGO_URI_DEVELOPMENT = 'mongodb+srv://binaminhhassan14:xShANg8cs607Fq0M@gallery.wc344.mongodb.net/darkroom-dev?retryWrites=true&w=majority'
        MONGO_URI_TEST = 'mongodb+srv://binaminhhassan14:xShANg8cs607Fq0M@gallery.wc344.mongodb.net/darkroom-test?retryWrites=true&w=majority'
    }

    stages {
        stage('Checkout') {
            checkout scm
        }

        stage('Install Dependencies') {
            steps {
                script {
                    sh 'npm install'
                }
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo 'Deploying Application'
                }
            }
    }

   post {
        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed. Check logs.'
        }
        always {
            cleanWs() 
        }
}

}